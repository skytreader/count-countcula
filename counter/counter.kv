#:kivy 1.0.9

<CounterWidget>:
    red_count: red_count
    blue_count: blue_count
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        id: red_count

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
        id: blue_count

    KickCountLabel:
        canvas.before:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
