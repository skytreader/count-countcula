#:kivy 1.0.9

<CounterWidget>:
    # Says: red_count in Widget code is the one with _red_count id
    red_count: _red_count
    blue_count: blue_count

    GridLayout:
        rows: 2
        top: root.top - 50
        center_x: root.width / 2
        row_force_default: True
        row_default_height: 100

        GridLayout:
            cols: 2

            KickCountLabel:
                bgcolor: [0, 0, 1, 1]
                font_size: 70
                #center_x: root.width * 3 / 4
                #top: root.top - 50
                id: blue_count
                size_hint_x: None
                width: 150

            KickCountLabel:
                bgcolor: [1, 0, 0, 1]
                font_size: 70
                #center_x: root.width / 4
                #top: root.top - 50
                id: _red_count
                size_hint_x: None
                width: 150
        
        Button:
            text: "Reset"
            on_press: root.reset()


<KickCountLabel>:
    canvas.before:
        Color:
            rgba: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size
